<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">    
    <title>CBB-NEWS</title>
</head>
<body id="page-top">

    <!-- Navigation -->
    <nav   class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <div class="container">
            <a style="font-size:34px"class="navbar-brand js-scroll-trigger" href="#page-top">CBB NEWS <span class="glyphicon glyphicon-globe" aria-hidden="true"></span></a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          Menu
          <i class="fa fa-bars"></i>
        </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a style="font-size:15px;color:White" class="nav-link js-scroll-trigger" href="">Home | </a>
                    </li>
                    <li  class="nav-item">
                        <a  id="scrape" href="#news"style="font-size:15px;color:red" class="nav-link js-scroll-trigger" href="#about"><span style="color:gold"class="glyphicon glyphicon-hand-right" aria-hidden="true"></span>     Breaking News<span class="glyphicon glyphicon-fire" aria-hidden="true"></span></a>
                    </li>
                    <li class="nav-item">
                        <a id="savedNews"style="font-size:15px;color:White" class="nav-link js-scroll-trigger" href="#news">| Saved News <span style="color:gold"class="glyphicon glyphicon-hand-left" aria-hidden="true"></span></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Intro Header -->
    <header class="masthead">
        <div class="intro-body">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 mx-auto">
                        <h1 class="brand-heading"></h1>
                        <p class="intro-text">
                            <br></p>
                        <a href="#news" class="btn btn-circle js-scroll-trigger">
                            <i class="fa fa-angle-double-down animated"></i>

                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- About Section -->
    <div>
    </div>
    <section id="news" class="content-section text-center">
        <div class="container">
            <div class="row">
                <h1 id="nothing"></h1>
                <div class="col-lg-12"></div>
            </div>
            <div class="row">
                <div id="content" class="col-lg-12">
                    {{#each news}} 
                     <div class="row">
                        <div style="text-align:left;font-size:18px;" class="col-lg-12">
                            <u><a href="{{this.link}}">{{this.title}}</a></u>
                        </div>
                    </div>
                    <div id="NewContent${i}"class="row">
                        <div class="col-lg-2"><img class="img-responsive" width=200 height=190 src="{{this.imglink}}" alt=""></div>
                        <div style="text-align:left;font-size:15px;"  class="col-lg-4">{{this.summary}}</div>
                        <div class="col-lg-2"></div>
                        {{#unless this.saved}}
                        <div style="color:black; font-size:15px;"class="savedBTN col-lg-4">
                            <button class="save" style="width:100px;"  data-id="{{this._id}}">Save</button>
                        </div>
                        {{/unless}}
                        {{#if this.saved}}
                          <div style="color:gold; font-size:15px;"class="savedBTN col-lg-4">
                            <p>Saved <span class="glyphicon glyphicon-ok" aria-hidden="true"></span></p>
                        </div>
                        {{/if}}
                    </div>
                    {{/each}}
                </div>           
            </div>
        </div>
    </section>
<!-- Modal -->
<div style="color:black"id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Write down your notes</h4>
      </div>
      <div class="myModal-body modal-body">
        {{!-- <textarea contenteditable='true' name="" id="" style="color:black;width:100%; height:150px;"></textarea> --}}
        {{!-- <div style="border:1px solid grey;">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 style="margin:0 0 0;">real news</h4>
        </div> --}}
        <br>
      </div>
      <div class=" modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
<!-- Modal -->
<div style="color:black" id="NotesModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Write down your notes</h4>
      </div>
      <div class=" modal-body">
        <textarea contenteditable='true' name="" id="" style="color:black;width:100%; height:150px;"></textarea>
      </div>
      <div class="myFooter modal-footer">
      </div>
    </div>

  </div>
</div>


    <!-- Footer -->
    <footer>
        <div class="container text-center">
            <p>Copyright &copy; My Website 2018</p>
        </div>
    </footer>
        
</body>
</html>
